{
  "lineWidth": 120,
  "useTabs": true,
  "typescript": {
    "indentWidth": 4,
    "objectExpression.spaceSurroundingProperties": false,
    "objectPattern.spaceSurroundingProperties": false,
    "importDeclaration.spaceSurroundingNamedImports": false,
	"nextControlFlowPosition": "nextLine"
  },
  "json": {
	"useTabs": false,
	"indentWidth": 2
  },
  "markdown": {
  },
  "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs,json,md}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.77.0.wasm",
    "https://plugins.dprint.dev/json-0.16.0.wasm",
    "https://plugins.dprint.dev/markdown-0.14.1.wasm"
  ]
}
