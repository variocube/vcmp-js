{
  "compilerOptions": {
    "outDir": "./esm",
    "module": "ES2020",
    "target": "ES2017",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ]
}